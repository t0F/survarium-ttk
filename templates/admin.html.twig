<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}TTK Admin!{% endblock %}</title>
    <meta name="viewport" id="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="57x57" href="{{ asset ('assets/favico/apple-icon-57x57.png') }}">
    <link rel="apple-touch-icon" sizes="60x60" href="{{ asset ('assets/favico/apple-icon-60x60.png') }}">
    <link rel="apple-touch-icon" sizes="72x72" href="{{ asset ('assets/favico/apple-icon-72x72.png') }}">
    <link rel="apple-touch-icon" sizes="76x76" href="{{ asset ('assets/favico/apple-icon-76x76.png') }}">
    <link rel="apple-touch-icon" sizes="114x114" href="{{ asset ('assets/favico/apple-icon-114x114.png') }}">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ asset ('assets/favico/apple-icon-120x120.png') }}">
    <link rel="apple-touch-icon" sizes="144x144" href="{{ asset ('assets/favico/apple-icon-144x144.png') }}">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ asset ('assets/favico/apple-icon-152x152.png') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ asset ('assets/favico/apple-icon-180x180.png') }}">
    <link rel="icon" type="image/png" sizes="192x192" href="{{ asset ('assets/favico/android-icon-192x192.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ asset ('assets/favico/favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="96x96" href="{{ asset ('assets/favico/favicon-16x16.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ asset ('assets/favico/favicon-96x96.png') }}">
    <link href="https://fonts.googleapis.com/css?family=Play&display=swap" rel="stylesheet">

    <link rel="manifest" href="{{ asset ('assets/favico/manifest.json') }}">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="{{ asset ('assets/favico/ms-icon-144x144.png') }}">
    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock %}
</head>
<body>
<div id='progress' class='container-fluid'></div>
<div id= 'contentBody' class='container' style='display:none;'>
    <script> const lang = "en"; </script>
    <script> const ajaxStatsUrl = null; </script>
    {% block body %}
        <h3>Update special weapons</h3>
        <div class="container-fluid">
            <form id="wcForm" method="post" action="{{ updateUrl }}">
                <select id="wcMultiSelect" form="wcForm" multiple name="wcMultiSelect[]" >
                    {% for wc in wcs %}
                        <option
                                value={{ wc.id }} {% if wc.isspecial == true %}
                            selected="selected"{% endif %}>
                            {{ wc.name }}
                        </option>
                    {% endfor %}
                </select>
                <div class="form-row customFormRow width100 paddingBot0">
                    <div class="col centerCol"><input type="submit" value="Update" class="btn btn-secondary" /></div>
                </div>
            </form>
        </div>
    {% endblock %}
    {% block javascripts %}
        {{ encore_entry_script_tags('admin') }}
    {% endblock %}
</div>
</body>
</html>

